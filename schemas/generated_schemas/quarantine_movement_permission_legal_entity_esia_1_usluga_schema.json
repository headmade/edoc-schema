{
  "type": "object",
  "properties": {
    "employees_list": {
      "title": "Список сотрудников",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "passport_seria": {
            "type": "string",
            "pattern": "^[0-9]{4}$",
            "title": "Серия паспорта сотрудника",
            "description": "Первые 4 цифры номера паспорта"
          },
          "passport_number": {
            "type": "string",
            "pattern": "^[0-9]{6}$",
            "title": "Номер паспорта сотрудника",
            "description": "Последние 6 цифр номера паспорта"
          },
          "fio": {
            "$ref": "http://edoc-schema.kzn.ru/person/ru/fio",
            "title": "ФИО сотрудника"
          },
          "phone": {
            "type": "string",
            "title": "Мобильный телефон"
          },
          "allowed_areas": {
            "title": "Разрешённый район",
            "type": "string",
            "enum": [
              "Весь город",
              "Авиастроительный",
              "Вахитовский",
              "Кировский",
              "Московский",
              "Ново-Савиновский",
              "Приволжский",
              "Советский"
            ]
          }
        },
        "required": [
          "passport_seria",
          "passport_number",
          "fio",
          "phone",
          "allowed_areas"
        ]
      },
      "minItems": 1
    },
    "agent": {
      "$ref": "http://edoc-schema.kzn.ru/person/ru/agent",
      "title": "Представитель"
    },
    "attachments": {
      "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/attachments",
      "title": "Дополнительные приложения"
    },
    "comments": {
      "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/comments",
      "title": "Комментарии"
    }
  },
  "required": [
    "employees_list"
  ],
  "$schema": "http://json-schema.org/draft-06/schema#"
}