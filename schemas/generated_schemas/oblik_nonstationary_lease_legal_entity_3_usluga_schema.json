{
  "type": "object",
  "required": [
    "organization",
    "agent",
    "letter_of_attorney",
    "lease_contract"
  ],
  "properties": {
    "organization": {
      "$ref": "http://edoc-schema.kzn.ru/organization/ru/organization",
      "title": "Заявитель"
    },
    "agent": {
      "$ref": "http://edoc-schema.kzn.ru/person/ru/agent",
      "title": "Представитель"
    },
    "letter_of_attorney": {
      "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/letter_of_attorney",
      "title": "Доверенность"
    },
    "address_with_map": {
      "$ref": "http://edoc-schema.kzn.ru/location/ru/address_with_map"
    },
    "lease_contract": {
      "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/lease_contracts"
    },
    "explanatory_note": {
      "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/explanatory_note"
    },
    "graphic_part": {
      "type": "object",
      "title": "Графическая часть",
      "properties": {
        "facades": {
          "type": "array",
          "minItems": 1,
          "title": "Фасады",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "title": "Тип фасада",
                "enum": [
                  "главный",
                  "боковой",
                  "дворовый"
                ]
              },
              "photo": {
                "accept": "image/png, image/jpeg",
                "title": "Фото исходной ситуации (файл)",
                "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/scanned_document",
                "description": "Фотофиксация существующего состояния объекта и его окружения. Файлы в формате jpg или png."
              },
              "sketch": {
                "title": "Эскизное предложение",
                "accept": "image/png, image/jpeg",
                "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/scanned_document",
                "description": "Архитектурно-строительные чертежи: фасады объекта. Файлы в формате jpg или png."
              },
              "description": {
                "title": "Описание",
                "type": "string"
              },
              "material": {
                "title": "Материал",
                "type": "string"
              },
              "color_description": {
                "title": "Описание цвета (с указанием системы: RAL,NCS и т.п.)",
                "type": "string"
              }
            }
          }
        },
        "general_plan": {
          "title": "Генеральный план",
          "accept": "image/png, image/jpeg",
          "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/scanned_document",
          "description": "В цвете на съемке текущих изменений в М 1:500, выполненной не позднее шести месяцев с начала проектирования объекта, с указанием границ предоставляемого участка. Файлы в формате jpg или png."
        },
        "landscape_visual_analysis": {
          "title": "Ландшафтно-визуальный анализ",
          "accept": "image/png, image/jpeg",
          "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/scanned_document",
          "description": "Ландшафтно-визуальный анализ с привязкой проектируемого объекта (видовые кадры). Файлы в формате jpg или png."
        }
      }
    },
    "documents_of_title": {
      "title": "Правоустанавливающие документы",
      "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/scanned_document"
    },
    "attachments": {
      "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/attachments",
      "title": "Дополнительные приложения"
    },
    "comments": {
      "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/comments",
      "title": "Комментарии"
    }
  },
  "$schema": "http://json-schema.org/draft-06/schema#"
}