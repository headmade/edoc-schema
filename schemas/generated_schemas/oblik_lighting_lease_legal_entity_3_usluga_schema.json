{
  "type": "object",
  "required": [
    "organization",
    "agent",
    "letter_of_attorney",
    "lease_contract"
  ],
  "properties": {
    "organization": {
      "$ref": "http://edoc-schema.kzn.ru/organization/ru/organization",
      "title": "Заявитель"
    },
    "agent": {
      "$ref": "http://edoc-schema.kzn.ru/person/ru/agent",
      "title": "Представитель"
    },
    "letter_of_attorney": {
      "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/letter_of_attorney",
      "title": "Доверенность"
    },
    "address_with_map": {
      "$ref": "http://edoc-schema.kzn.ru/location/ru/address_with_map"
    },
    "cadastre_number": {
      "$ref": "http://edoc-schema.kzn.ru/identifier/ru/cadastre_number",
      "title": "Кадастровый номер",
      "description": "Кадастровый номер в виде число:число:число..."
    },
    "lease_contract": {
      "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/lease_contracts"
    },
    "explanatory_note": {
      "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/explanatory_note"
    },
    "graphic_part": {
      "type": "object",
      "title": "Графическая часть",
      "properties": {
        "facades": {
          "type": "array",
          "minItems": 1,
          "title": "Фасады",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "title": "Тип фасада",
                "enum": [
                  "главный",
                  "боковой",
                  "дворовый"
                ]
              },
              "photo": {
                "title": "Фото исходной ситуации (файл)",
                "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/scanned_document",
                "description": "Фотофиксация существующего состояния объекта и его окружения"
              },
              "sketch": {
                "title": "Эскизное предложение",
                "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/scanned_document",
                "description": "Предложение по архитектурной подсветке объекта с описанием технических характеристик, с указанием размещения оборудования на фасадах и(или) земельном участке"
              }
            }
          }
        },
        "topographic_plan": {
          "title": "Генеральный план",
          "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/scanned_document_optional",
          "description": "Генплан размещения оборудования в масштабе 1:500 при архитектурной подсветке объекта с отдельно стоящих опор"
        },
        "light_technical_calculation": {
          "title": "Светотехнический расчет",
          "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/scanned_document",
          "description": "Обоснование используемого оборудования"
        }
      }
    },
    "documents_for_land": {
      "title": "Правоустанавливающие документы на земельный участок",
      "description": "Скан-копии правоустанавливающих документов, подтверждающие имущественные права заявителя на занимаемое здание, помещение, некапитальный объект. При архитектурной подсветке с отдельно стоящих опор",
      "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/scanned_document_optional"
    },
    "attachments": {
      "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/attachments",
      "title": "Дополнительные приложения"
    },
    "comments": {
      "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/comments",
      "title": "Комментарии"
    }
  },
  "$schema": "http://json-schema.org/draft-06/schema#"
}