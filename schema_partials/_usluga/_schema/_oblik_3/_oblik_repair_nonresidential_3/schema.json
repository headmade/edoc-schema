{
  "type": "object",
  "required": [
    "passport_bti"
  ],
  "properties": {
    "passport_bti": {
      "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/passport_bti",
      "description": "Документы, технической инвентаризации – план помещения, выданный уполномоченной организацией."
    },
    "documents_of_title": {
      "title": "Правоустанавливающие документы",
      "description": "Скан-копии правоустанавливающих документов, подтверждающие имущественные права заявителя на занимаемое здание, помещение, некапитальный объект",
      "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/scanned_document_optional"
    },
    "explanatory_note": {
      "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/explanatory_note"
    },
    "graphic_part": {
      "type": "object",
      "title": "Графическая часть",

      "properties": {
        "facades": {
          "type": "array",
          "minItems": 1,
          "title": "Фасады",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "title": "Тип фасада",
                "enum": [
                  "главный",
                  "боковой",
                  "дворовый"
                ]
              },
              "photo": {
                "accept": "image/png, image/jpeg",
                "title": "Фото исходной ситуации (файл)",
                "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/scanned_document",
                "description": "Фотофиксация существующего состояния объекта и его окружения. Файлы в формате jpg или png."
              },
              "sketch": {
                "accept": "image/png, image/jpeg",
                "title": "Эскизное предложение",
                "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/scanned_document",
                "description": "Архитектурно-строительные чертежи: фасады объекта. Файлы в формате jpg или png."
              },
              "description": {
                "type": "string",
                "title": "Описание"
              },
              "material": {
                "type": "string",
                "title": "Материал"
              },
              "color_description": {
                "type": "string",
                "title": "Описание цвета (с указанием системы: RAL,NCS и т.п.)"
              }
            }
          }
        }
      }
    },
    "cadastre_number": {
      "$ref": "http://edoc-schema.kzn.ru/identifier/ru/cadastre_number",
      "title": "Кадастровый номер",
      "description": "Кадастровый номер в виде число:число:число..."
    }
  }
}
